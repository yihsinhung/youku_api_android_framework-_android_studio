<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.intro.moiveslist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> 
        <uses-permission android:name="android.permission.WAKE_LOCK"/>
        
    <application
        android:name="com.android.intro.custorm.imageview.SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_flip"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        
        <activity
            android:name="com.android.intro.moiveslist.SplashActivity"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             android:configChanges="keyboardHidden"
             android:label="@string/app_name"
             android:launchMode="singleTask"
             android:screenOrientation="portrait">
            <intent-filter>
             	 <action android:name="android.intent.action.MAIN" />

                 <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
     <activity
            android:name="com.android.intro.moiveslist.MovieHome"
            android:label="@string/app_name"
             android:theme="@style/Theme.PageIndicatorDefaults"
             android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.android.intro.moiveslist.MoiveDetailAvctivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
                                                                                               
         <activity
            android:name="com.android.intro.moiveslist.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.android.intro.moiveslist.YoukuVideoView"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="com.android.intro.moiveslist.SearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
         
        
    </application>

</manifest>
